
{
  "name": "photo_albums",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["user_id", "title", "created_at", "updated_at"],
        "properties": {
          "user_id": {
            "bsonType": "string",
            "description": "User ID who owns this album"
          },
          "title": {
            "bsonType": "string",
            "maxLength": 100,
            "description": "Album title"
          },
          "description": {
            "bsonType": "string",
            "maxLength": 500,
            "description": "Album description"
          },
          "cover_photo_url": {
            "bsonType": "string",
            "description": "URL of the album cover photo"
          },
          "is_public": {
            "bsonType": "bool",
            "description": "Whether album is visible to other users"
          },
          "photo_count": {
            "bsonType": "int",
            "description": "Number of photos in this album"
          },
          "created_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Album creation timestamp"
          },
          "updated_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Album last update timestamp"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
